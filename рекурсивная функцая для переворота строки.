def reverse_string(s):
    """
    Рекурсивно переворачивает строку
    
    Args:
        s: строка для переворота
    
    Returns:
        Перевернутая строка
    """
    # Базовый случай 1: пустая строка
    if len(s) == 0:
        return ""
    
    # Базовый случай 2: строка из одного символа
    if len(s) == 1:
        return s
    
    # Рекурсивный случай:
    # Берем последний символ + переворачиваем оставшуюся часть строки
    # s[-1] - последний символ строки
    # s[:-1] - вся строка кроме последнего символа
    # reverse_string(s[:-1]) - рекурсивно переворачиваем оставшуюся часть
    return s[-1] + reverse_string(s[:-1])

# Примеры использования
print(reverse_string("hello"))     # "olleh"
print(reverse_string("Python"))    # "nohtyP"
print(reverse_string("a"))         # "a"
print(reverse_string(""))          # ""
